<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Editar Cliente</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <h2 class="text-center display-3 fw-bold mt-5">Editar Cliente</h2>
    <br>
    <form action="/ed/EssenzaDivinaCRM-master/cliente/actualizarCliente" method="post" enctype="multipart/form-data" class="row g-3">
        <!-- Campo oculto para el ID del cliente -->
        <input type="hidden" name="id" value="{{cliente_id}}">

        <!-- Nombre Completo -->
        <div class="col-md-6">
            <label for="nombre" class="form-label">Nombre Completo:</label>
            <input id="nombre" type="text" name="nombre" class="form-control" required value="{{cliente_nombre}}">
        </div>

        <!-- DNI -->
        <div class="col-md-6">
            <label for="dni" class="form-label">DNI:</label>
            <input id="dni" type="text" name="dni" class="form-control" required value="{{cliente_dni}}">
        </div>

        <!-- Celular -->
        <div class="col-md-6">
            <label for="celular" class="form-label">Celular:</label>
            <input id="celular" type="text" name="celular" class="form-control" value="{{cliente_celular}}">
        </div>

        <!-- Provincia -->
        <div class="col-md-6">
            <label for="provincia" class="form-label">Provincia:</label>
            <select id="provincia" name="provincia" class="form-control">
                <option value="">Seleccione una provincia</option>
                {{#provincias}}
                    <option value="{{nombre}}" {{selected}}>{{nombre}}</option>
                {{/provincias}}
            </select>
        </div>

        <!-- Localidad -->
        <div class="col-md-6">
            <label for="localidad" class="form-label">Localidad:</label>
            <input id="localidad" type="text" name="localidad" class="form-control" value="{{cliente_localidad}}">
        </div>

        <!-- Código Postal -->
        <div class="col-md-6">
            <label for="codigo_postal" class="form-label">Código Postal:</label>
            <input id="codigo_postal" type="text" name="codigo_postal" class="form-control" value="{{cliente_codigo_postal}}">
        </div>

        <!-- Dirección -->
        <div class="col-md-6">
            <label for="direccion" class="form-label">Dirección:</label>
            <input id="direccion" type="text" name="direccion" class="form-control" value="{{cliente_direccion}}">
        </div>

        <!-- Botón para actualizar -->
        <div class="col-12">
            <div class="d-flex justify-content-center">
                <input type="submit" value="Actualizar" class="btn btn-primary btn-lg">
            </div>
        </div>

        <!-- Mostrar mensaje si existe -->
        {{#showMessage}}
            <div class="col-12">
                <h4 class="text-danger">{{message}}</h4>
            </div>
        {{/showMessage}}
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>

